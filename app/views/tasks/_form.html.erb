<%= form_with model: task do |f| %>
    <% if task.errors.any? %>
      <h3>Errors:</h3>
      <ul>
        <% task.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    <% end %>
  
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
  
    <p>
      <%= f.label :status %><br>
      <%= f.select :status, Task.statuses.keys.map { |s| [s.humanize, s] } %>
    </p>
  
    <p>
      <%= f.label :priority %><br>
      <%= f.select :priority, Task.priorities.keys.map { |p| [p.humanize, p] } %>
    </p>
  
    <p>
      <%= f.label :due_date %><br>
      <%= f.date_field :due_date %>
    </p>
  
    <%= f.submit %>
  <% end %>
  