<div class="card section">
  <h2>Task Details</h2>
  <p class="text-muted">Review the latest task information.</p>

  <div class="section">
    <p><strong>Title:</strong> <%= @task.title %></p>
    <p><strong>Status:</strong> <span class="badge status <%= @task.status %>"><%= @task.status.humanize %></span></p>
    <p><strong>Priority:</strong> <span class="badge priority <%= @task.priority %>"><%= @task.priority.humanize %></span></p>
    <p><strong>Due date:</strong> <%= @task.due_date || "-" %></p>
  </div>

  <div class="form-actions">
    <%= link_to "Edit", edit_task_path(@task), class: "btn btn-secondary" %>
    <%= link_to "Back", tasks_path, class: "btn btn-ghost" %>
  </div>
</div>
